<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <!-- Handmade rifle -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Handmade_Rifle</defName>
    <label>handmade rifle</label>
    <description>A handmade slug-thrower that uses some pretty big rounds. It will rip through most armor, but is limited by a shorter range than most firearms.</description>
    <graphicData>
      <texPath>Things/Weapons/m_handmade_rifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>440</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Milkwater_HandmadeRifle</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>20</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_HandmadeRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGun</li>
      <li>ShortShots</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Milkwater_HandmadeRifle</defName>
    <label>handmade rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>14</damageAmountBase>
	  <armorPenetrationBase>1.6</armorPenetrationBase>
      <speed>60</speed>
    </projectile>
  </ThingDef>
  
